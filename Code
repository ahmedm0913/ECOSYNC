IRsend irsend;
String mode;

int EcoModeLedPin = 2;//yellow
int LuxuryModeLedPin = 3;//green


void setup() {
  Serial.begin(9600);
}

void loop() {

  if (!Serial.available()){

    digitalWrite(8, LOW);
    digitalWrite(EcoModeLedPin, LOW);
    digitalWrite(LuxuryModeLedPin, LOW);

    delay(100);
  }

  if (Serial.available()){

  // EcoMode vs LuxuryMode 
    if (digitalRead(4)== HIGH){  // if digitalRead(4)== HIGH then EcoMode
      digitalWrite(EcoModeLedPin, HIGH);
      digitalWrite(LuxuryModeLedPin, LOW);

      mode="EcoMode";
      
      // send the ecomode array
      irsend.sendRaw(temp25, sizeof(temp25) / sizeof(temp25[0]), 38);  
    
    }
    else{
      digitalWrite(EcoModeLedPin, LOW);
      digitalWrite(LuxuryModeLedPin, HIGH);
      
      mode="LuxuryMode";
      
      // send the luxurymode array
      irsend.sendRaw(temp23, sizeof(temp23) / sizeof(temp23[0]), 38); 
      
    }

    digitalWrite(8, HIGH);

  }
}
